<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/permission_input"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:hint="Enter Permission Code"/>

    <Button
        android:id="@+id/permissionconfirm_btn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="false"
        android:layout_alignLeft="@+id/permission_input"
        android:layout_below="@+id/permission_input"
        android:text="Confirm"/>

    <Button
        android:id="@+id/confirmcode_btn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="false"
        android:layout_alignRight="@+id/permission_input"
        android:layout_below="@+id/permission_input"
        android:text="return"/>


</RelativeLayout>